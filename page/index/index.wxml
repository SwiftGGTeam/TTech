                <text class="c-block wx-text_LS2Jup">{{item.salon_publish_date}}</text>
            </view>
        </view>
        <view class="wx-view_KedDbI">
            <text class="c-block wx-text_6zTs4l">{{item.salon_intro}}</text>
        </view>
