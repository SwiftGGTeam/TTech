.text_detail {
  font-size: 12px; 
  color: rgb(156, 156, 156); 
  padding-right: 0.5rem; 
}
.text_count {
  font-size: 12px; 
  color: #8c8c8c; 
}
.image_count {
  width: 16px; 
  height: 16px; 
  margin-right: 10px; 
}
.view_count {
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  min-width: 40px; 
  margin-right: 15px; 
}
.view_info_counts {
  display: flex; 
  padding-left: 0.5rem; 
}
.view_card_bottom {
  display: flex; 
  justify-content: space-between; 
  padding: 0.5rem; 
  padding-right: 0.5rem; 
}
.view_card_index {
  padding-top: 4.5rem;
}
.view_top_banner {
  display: flex;
  padding: 1rem;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgb(209, 209, 209);
  position: fixed;
  z-index: 100;
  top: 0px;
  background-color: rgba(255,255,255,0.96);
  width: 100%;
  height: 4rem;
}
.view_banner_elements {
  display: flex;
  justify-content: center;
}
.image_banner_avatar {
  width: 50px;
  height: 50px;
  border-radius: 50px;
  margin-right: 10px;
  flex-grow: 0;
  flex-shrink: 0;
  flex-basis: auto;
}
.text_banner {
  font-size: 15px;
  color: #a1a1a1;
  align-self: center;
}
.navigator_banner {
  display: flex;
  align-items: center;
  width: 40px;
  height: 40px;
  text-align: center;
  justify-content: center;
  border-width: 1px;
  border-style: solid;
  border-color: rgb(227, 227, 227);
  border-radius: 2px;
  position: relative;
  margin-left: 5px;
  margin-right: 5px;
}
.image_banner_button {
  width: 20px;
  height: 20px;
}